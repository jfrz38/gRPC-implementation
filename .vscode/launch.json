    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Server",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/csharp/server/bin/Debug/net5.0/server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/csharp/server",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Client",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/csharp/client/bin/Debug/net5.0/csharp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/csharp/client",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "JS client",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\src\\node\\index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "JS server",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\src\\node\\server\\server.js"
        }
    ]
}
